<div class="container-fluid favorite-products">
    <h2 class="title">ĐƯỢC ƯA THÍCH NHẤT</h2>
    <div class="products">
        @if (ViewBag.Products != null)
        {
            foreach (var product in ViewBag.Products)
            {
                <div class="product-item">
                    <img src="@product.ImageURL" alt="@product.Name">
                    <h5>@product.Name</h5>
                    <p class="price">@product.Price ₫</p>
                    <a href="@Url.Action("AddToCart", "Cart", new { productID = product.ProductID })" class="btn btn-success">Thêm vào giỏ hàng</a>                    <p>Danh mục: @(product.Category != null ? product.Category.CategoryName : "Không có")</p>
                    <button class="btn-buy btn-cart btn btn-primary left-to add_to_cart " title="Cho vào giỏ hàng">
                        <span>
                            <!--<i class="fa fa-cart-plus" aria-hidden="true"></i>-->
                            Mua hàng
                        </span>
                    </button>
                </div>
            }
        }
        else
        {
            <p>Không có sản phẩm nào.</p>
        }
    </div>
</div>
