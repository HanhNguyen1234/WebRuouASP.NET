@model WebRuou.Models.Category
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="page-inner">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Thêm mới danh mục </h3>
            </div>
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Thông tin thêm mới danh mục </h3>
                    <div class="card-body">
                        @using (Html.BeginForm("Create", "Category", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label for="ID">ID</label>
                                @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control", @placeholder = "ID danh mục" })
                                @Html.ValidationMessageFor(x => x.CategoryID, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="NameCate">Tên loại</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @placeholder = "Tên danh mục" })
                                @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="NameCate">Mô tả</label>
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "Mô tả" })
                                @Html.ValidationMessageFor(x => x.Description, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <a href="/admin/category" class="btn btn-danger">Quay lại</a>
                                <button type="submit" class="btn btn-success mr-2">Submit</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





