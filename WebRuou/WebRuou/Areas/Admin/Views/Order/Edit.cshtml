@model WebRuou.Models.Order
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Chỉnh sửa đơn hàng #@Model.OrderID</h3>

    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <!-- Ẩn OrderID để gửi đúng giá trị -->
            @Html.HiddenFor(model => model.OrderID)

            <div class="form-group">
                <label>Tổng tiền:</label>
                @Html.TextBoxFor(model => model.TotalAmount, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Trạng thái:</label>
                @Html.DropDownListFor(model => model.Status, new SelectList(new[]
                {
                    "Chờ xác nhận", "Đang giao", "Hoàn thành"
                }), new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success">Lưu</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
        }
    </div>
</div>
